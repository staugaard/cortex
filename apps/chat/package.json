{
	"name": "chat",
	"version": "1.0.0",
	"description": "Electrobun app with React, Tailwind CSS, and Vite HMR",
	"scripts": {
		"dev": "bun run build && electrobun dev",
		"dev:hmr": "concurrently \"bun run hmr\" \"bun run dev\"",
		"dev:cef": "ELECTROBUN_RENDERER=cef ELECTROBUN_REMOTE_DEBUG_PORT=9222 bun run build && electrobun dev",
		"dev:hmr:cef": "concurrently \"bun run hmr\" \"bun run dev:cef\"",
		"hmr": "vite --port 5174",
		"build": "vite build && electrobun build",
		"build:prod": "vite build && electrobun build --channel prod",
		"cdp:check": "curl -sf http://localhost:${ELECTROBUN_REMOTE_DEBUG_PORT:-9222}/json/version",
		"cdp:targets": "curl -sf http://localhost:${ELECTROBUN_REMOTE_DEBUG_PORT:-9222}/json/list",
		"cdp:screenshot": "node scripts/cdp-chat-smoke.mjs",
		"cdp:smoke": "CDP_PROMPT=\"Tooling smoke prompt\" node scripts/cdp-chat-smoke.mjs",
		"cdp:llm": "CDP_PROMPT=\"Give a two-bullet markdown response confirming you are live.\" CDP_ASSISTANT_WAIT_MS=30000 CDP_WAIT_MS=2000 CDP_SCREENSHOT=output/playwright/cdp-llm-response.png node scripts/cdp-chat-smoke.mjs",
		"cdp:tools": "node scripts/cdp-tool-matrix.mjs",
		"check:elements-adoption": "bun scripts/check-elements-adoption.mjs",
		"start": "bun run dev",
		"typecheck": "tsc -p tsconfig.json --pretty false && bun run check:elements-adoption"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.46",
		"@ai-sdk/react": "^3.0.99",
		"@cortex/chat-core": "workspace:*",
		"@radix-ui/react-use-controllable-state": "^1.2.2",
		"@rive-app/react-webgl2": "^4.27.0",
		"@streamdown/cjk": "^1.0.2",
		"@streamdown/code": "^1.0.3",
		"@streamdown/math": "^1.0.2",
		"@streamdown/mermaid": "^1.0.2",
		"@xyflow/react": "^12.10.1",
		"ai": "^6.0.97",
		"ansi-to-react": "^6.2.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"electrobun": "1.13.1",
		"embla-carousel-react": "^8.6.0",
		"lucide-react": "^0.575.0",
		"media-chrome": "^4.18.0",
		"motion": "^12.34.3",
		"nanoid": "^5.1.6",
		"radix-ui": "^1.4.3",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-jsx-parser": "^2.4.1",
		"shiki": "^3.22.0",
		"streamdown": "^2.3.0",
		"tailwind-merge": "^3.5.0",
		"tokenlens": "^1.3.1",
		"use-stick-to-bottom": "^1.1.3"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.2.0",
		"@types/bun": "latest",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.4",
		"concurrently": "^9.2.1",
		"playwright-core": "^1.58.2",
		"tailwindcss": "^4.2.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	}
}
